<!DOCTYPE html>
<html>
<head>
  <title> <%= default_title(yield(:title)) %> </title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body style="">
   <header class="navbar navbar-fixed-top">
      <div class="navbar-inner">
         <div class="container">
            <div style="height:15px">
               <%= link_to "tiniHOST", '/', :style=>"position:absolute; padding-top:20px; color:white; font-size:2em; font-weight:bold" %>
            </div>
   
            <nav>
               <ul class="nav pull-right">
                  <li><%= link_to "about", '/about' %></li>
                  <li> <%= link_to "hosts", hosts_path, id: "lighter" %></li>
                  <% if signed_in? %>
                     <%= render 'shared/signedin_header' %>
				      <% else %>
	                  <li><%= link_to "sign in ", signin_path %></li>
                  <% end %>
	            </ul>
	         </nav>
	       </div>
	   </div>	
	</header>
       
	<div class="container">
	   <div>
	       <% flash.each do |key, value| %>
               <% if "#{key}" == "error" %>
                  <%= content_tag(:div, value, class: "alert alert-error") %>
               <% else %>
                  <%= content_tag(:div, value, class: "alert alert-success") %>
               <% end %>
            <% end %>
	   </div>   
      <%= yield %>	
   </div>			
   <div class="filler"></div>
   <div class="container">
      <%= request.fullpath %>
   </div>
</body>
</html>
