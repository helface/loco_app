<!DOCTYPE html>
<html>
<head>
  <title> <%= default_title(yield(:title)) %> </title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
   <header class="navbar navbar-fixed-top">
      <div class="navbar-inner">
         <div class="container">
<div id="name" style="height:30px">
   <%= link_to image_tag("rails.png", alt: "Rails"), '/', id: "logo" %>
</div>
            <nav>
               <ul class="nav pull-right">
                  <% if signed_in? %>
                     <%= render 'shared/signedin_header' %>
				      <% else %>
	                  <li><%= link_to "sign in ", signin_path %></li>
                  <% end %>
	            </ul>
	         </nav>
	       </div>
	   </div>	
	</header>
       
	<div class="container">
      <% flash.each do |key, value| %>
         <% if "#{key}" == "error" %>
            <%= content_tag(:div, value, style: "color: red") %>
         <% else %>
            <%= content_tag(:div, value, style: "color: green") %>
         <% end %>
      <% end %>

      <%= yield %>	
      <%= debug(params) if Rails.env.development? %>
   </div>			
</body>
</html>
