 <div style="height: 50px">
	<% if params[:folder] == 'sent'%>
		<% recipient = User.find(message.recipient_id) %>		
		To: <%= link_to recipient.firstname, user_path(recipient) %>
	<% else %>
		<% sender = User.find(message.sender_id) %>
		from: <%=  link_to sender.firstname, user_path(sender) %>	
	<% end %>
	<br>
	<% msgthread = Msgthread.find(message.thread_id) %>
	<%= link_to message.subject, user_msgthread_path(current_user, msgthread) %>
</div>